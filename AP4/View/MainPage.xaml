<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:AP4.Model"
             xmlns:viewmodel="clr-namespace:AP4.ViewModel"
             x:DataType="viewmodel:UserViewModel"
             x:Class="AP4.MainPage">

    <VerticalStackLayout>
        <FlexLayout x:Name="HeroBanner"
                    BackgroundColor="Orange"
                    HeightRequest="200"
                    JustifyContent="SpaceBetween"
                    AlignItems="Center"
                    Direction="Column">  
            <HorizontalStackLayout Padding="20">
                <Label Text="Hello " 
                       FontSize="40"
                       FontFamily="InterSemiBold"/>
                <Label Text="{Binding User.Name}" 
                       FontSize="40"
                       FontFamily="InterSemiBold"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout Padding="20">
                <Label Text="{Binding User.Point}" 
                       FontSize="50"
                       FontFamily="InterBlack"/>
                <Label Text=" Points" 
                       FontSize="50"/>
            </HorizontalStackLayout>
        </FlexLayout>
    </VerticalStackLayout>

</ContentPage>
