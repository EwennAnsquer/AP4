<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:AP4.Model"
             xmlns:viewmodel="clr-namespace:AP4.ViewModel"
             x:DataType="viewmodel:UserViewModel"
             x:Class="AP4.MainPage">

    <VerticalStackLayout>
        <FlexLayout x:Name="HeroBanner"
                    BackgroundColor="{StaticResource Orange}"
                    JustifyContent="SpaceBetween"
                    AlignItems="Center"
                    Direction="Column"
                    HorizontalOptions="FillAndExpand">
            <StackLayout Padding="20"
                         Orientation="Horizontal"
                         HorizontalOptions="FillAndExpand">
                <Label Text="Hello " 
                       FontSize="20"
                       FontFamily="InterSemiBold"
                       Style="{StaticResource HeroLabel}"/>
                <Label Text="{Binding User.Name}" 
                       FontSize="20"
                       FontFamily="InterSemiBold"
                       Style="{StaticResource HeroLabel}"
                       HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <HorizontalStackLayout Padding="20"
                                   HorizontalOptions="FillAndExpand">
                <Label Text="{Binding User.Point}" 
                       FontSize="50"
                       FontFamily="InterBlack"
                       Style="{StaticResource HeroLabel}"/>
                <Label Text=" Points" 
                       FontSize="50"
                       Style="{StaticResource HeroLabel}"/>
            </HorizontalStackLayout>
        </FlexLayout>
    </VerticalStackLayout>

</ContentPage>
